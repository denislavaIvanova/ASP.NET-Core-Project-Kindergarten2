@model IndexViewModel

@{
	ViewData["Title"] = "Welcome!";
}

@{
	var teachers = Model.Teachers;
	var firstTeacher = teachers.Any() ? teachers[0] : null;
	var secondTeacher = teachers.Count > 1 ? teachers[1] : null;
	var thirdTeacher = teachers.Count > 2 ? teachers[2] : null;

}

@if (!teachers.Any())
{
	<div class="jumbotron">
		<h1 class="display-4">Welcome to the best place for your child!</h1>
		<p class="lead">No teachers are available at the moment so please add one.</p>
		<hr class="my-4">
		<p class="lead">
			<a asp-controller="Teachers" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Teacher</a>
		</p>
	</div>

}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
	<div class="carousel-inner">
		@if (firstTeacher != null)
		{
			<div class="carousel-item active">
				<img class="d-block w-100" src="@firstTeacher.ImageUrl" alt="@firstTeacher.FirstName @firstTeacher.LastName">
				<div class="carousel-caption d-none d-md-block">
					<h5><a class="btn btn-primary" asp-controller="Teachers" asp-action="Details" asp-route-id="@firstTeacher.Id">@firstTeacher.FirstName @firstTeacher.LastName</a></h5>
				</div>
			</div>
		}
		@if (secondTeacher != null)
		{
			<div class="carousel-item">
				<img class="d-block w-100" src="@secondTeacher.ImageUrl" alt="@secondTeacher.FirstName @secondTeacher.LastName">
				<div class="carousel-caption d-none d-md-block">
					<h5><a class="btn btn-primary" asp-controller="Teachers" asp-action="Details" asp-route-id="@secondTeacher.Id">@secondTeacher.FirstName @secondTeacher.LastName</a></h5>
				</div>
			</div>
		}
		@if (thirdTeacher != null)
		{
			<div class="carousel-item">
				<img class="d-block w-100" src="@thirdTeacher.ImageUrl" alt="@thirdTeacher.FirstName @thirdTeacher.LastName">
				<div class="carousel-caption d-none d-md-block">
					<h5><a class="btn btn-primary" asp-controller="Teachers" asp-action="Details" asp-route-id="@thirdTeacher.Id">@thirdTeacher.FirstName @thirdTeacher.LastName</a></h5>
				</div>
			</div>
		}
	</div>
	<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>

<div class="mb-5"></div>
<div class="jumbotron">
	<div class="row">
		<h2 class="col-md-4 text-center">
			@Model.TotalTeachers Teachers
		</h2>
		<h2 class="col-md-4 text-center">
			@Model.TotalChildren Children
		</h2>
		<h2 class="col-md-4 text-center">
			@Model.TotalGroups Groups
		</h2>
	</div>
</div>