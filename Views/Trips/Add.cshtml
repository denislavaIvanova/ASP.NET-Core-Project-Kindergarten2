@model AddTripFormModel;

@{
	ViewData["Title"] = "Add Trip";
}

<div class="container">
	<div class="row">
		<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
			<h2 class="heading-margin text-center">Add Trip</h2>
			<form method="post">
				<div class="form-group">
					<label asp-for="PlaceToVisit"></label>
					<input asp-for="PlaceToVisit" class="form-control" placeholder="Add trip's place to visit here...">
					<span asp-validation-for="PlaceToVisit" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Activity"></label>
					<textarea asp-for="Activity" class="form-control" placeholder="Add trip's main activity here..."></textarea>
					<span asp-validation-for="Activity" class="small text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Price"></label>
					<input asp-for="Price" class="form-control" placeholder="Add trip's price here...">
					<span asp-validation-for="Price" class="small text-danger"></span>
				</div>
				 <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your trip's URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
				<div class="form-group">
					<label asp-for="Location"></label>
					<input asp-for="Location" class="form-control" placeholder="Add trip's location here...">
					<span asp-validation-for="Location" class="small text-danger"></span>
				</div>
				<input class="btn btn-primary" type="submit" value="Save"/>
			</form>
		</div>
	</div>
</div>